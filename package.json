{
  "name": "tsokta-sprockets",
  "version": "1.0.0",
  "description": "Revolutionary Electronic Thingamajigs for Seamless Widget Integration",
  "private": true,
  "author": "Tsokta Sprockets Team",
  "license": "MIT",
  "keywords": [
    "electronic interfaces",
    "widgets",
    "sprockets",
    "thingamajigs",
    "system integration",
    "next.js",
    "react",
    "typescript"
  ],
  "homepage": "https://tsoktasprockets.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsokta-sprockets/website.git"
  },
  "bugs": {
    "url": "https://github.com/tsokta-sprockets/website/issues"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "analyze": "cross-env ANALYZE=true next build",
    "export": "next export",
    "sitemap": "next-sitemap",
    "clean": "rm -rf .next out dist",
    "deps:update": "npm-check-updates -u",
    "security:audit": "npm audit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@heroicons/react": "^2.0.18",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0",
    "next-auth": "^4.24.5",
    "jose": "^5.1.3",
    "@headlessui/react": "^1.7.17",
    "framer-motion": "^10.16.16",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "date-fns": "^2.30.0",
    "react-query": "^3.39.3",
    "axios": "^1.6.2",
    "recharts": "^2.8.0",
    "react-hot-toast": "^2.4.1",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^29.5.8",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@playwright/test": "^1.40.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "cross-env": "^7.0.3",
    "@next/bundle-analyzer": "^14.0.4",
    "next-sitemap": "^4.2.3",
    "npm-check-updates": "^16.14.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}